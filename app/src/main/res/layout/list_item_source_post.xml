<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:id="@+id/source_post_list_item_row"
              android:layout_height="wrap_content"
              android:padding="@dimen/list_item_padding"
              android:orientation="vertical">

    <TextView
            android:id="@+id/source_post_list_url"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_global"
            android:textColor="@color/textColor"
            android:layout_width="fill_parent"/>

    <TextView
            android:id="@+id/source_post_list_published"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_global"
            android:textColor="@color/textColor"
            android:layout_width="fill_parent"/>

    <TextView
            android:id="@+id/source_post_list_post_status"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_global"
            android:textColor="@color/textColor"
            android:layout_width="fill_parent"/>

    <TextView
            android:id="@+id/source_post_list_name"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textIsSelectable="true"
            android:textColor="@color/textColor"
            android:textSize="@dimen/list_item_text_size"
            android:layout_width="fill_parent"/>

    <com.indieweb.indigenous.widget.ExpandableTextView
            android:id="@+id/source_post_list_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:maxLines="10"
            android:textIsSelectable="true"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/textColor"
            android:textSize="@dimen/list_item_text_size"
            android:lineSpacingExtra="5dp"
            android:ellipsize="end"/>

    <Button
            android:id="@+id/source_post_list_content_more"
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:background="@android:color/transparent"
            android:text="@string/read_more"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <Button
                android:visibility="gone"
                android:background="@drawable/button_update"
                android:id="@+id/itemUpdate"
                android:hint="@string/update_post"
                android:textColorHint="@android:color/transparent"
                android:layout_width="@dimen/list_item_icon_size"
                android:layout_height="@dimen/list_item_icon_size"
                style="?android:attr/buttonBarButtonStyle"/>

        <Button
                android:visibility="gone"
                android:background="@drawable/button_delete"
                android:id="@+id/itemDelete"
                android:hint="@string/delete_post"
                android:textColorHint="@android:color/transparent"
                android:layout_width="@dimen/list_item_icon_size"
                android:layout_height="@dimen/list_item_icon_size"
                android:layout_marginStart="@dimen/list_item_icon_margin_left"
                style="?android:attr/buttonBarButtonStyle"/>

        <Button
                android:background="@drawable/button_external"
                android:id="@+id/itemExternal"
                android:hint="@string/external_link"
                android:textColorHint="@android:color/transparent"
                android:layout_width="@dimen/list_item_icon_size"
                android:layout_height="@dimen/list_item_icon_size"
                android:layout_marginStart="@dimen/list_item_icon_margin_left"
                style="?android:attr/buttonBarButtonStyle"/>

        <Button
                android:background="@drawable/button_reply"
                android:id="@+id/itemReply"
                android:hint="@string/add_reply"
                android:textColorHint="@android:color/transparent"
                android:layout_width="@dimen/list_item_icon_size"
                android:layout_height="@dimen/list_item_icon_size"
                android:layout_marginStart="@dimen/list_item_icon_margin_left"
                style="?android:attr/buttonBarButtonStyle"/>

    </LinearLayout>

</LinearLayout>