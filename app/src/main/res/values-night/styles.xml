<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/menuTextColor</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/menuTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.MyApp.NavigationView" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/menuTextColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

</resources>
