<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indieweb.indigenous">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoteActivity"
            android:label="@string/add_note"
            android:parentActivityName="com.indieweb.indigenous.ChannelsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.ChannelsActivity" />
        </activity>
        <activity
            android:name=".ArticleActivity"
            android:label="@string/add_article"
            android:parentActivityName="com.indieweb.indigenous.ChannelsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.ChannelsActivity" />
        </activity>
        <activity
            android:name=".ChannelsActivity"
            android:label="@string/channels"
            />
        <activity
            android:name=".TimeLineActivity"
            android:label="@string/timeline"
            android:parentActivityName="com.indieweb.indigenous.ChannelsActivity">
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.indieweb.indigenous.ChannelsActivity" />
        </activity>
    </application>

</manifest>